{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@midlo/utils": ["packages/utils/src/index.ts"],
      "@midlo/shared-theme": ["packages/shared-theme/src/index.ts"],
      "@midlo/shared-types": ["packages/shared-types/src/index.ts"]
    }
  }
}
